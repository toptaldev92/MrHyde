<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item
        android:state_selected="true"
        android:state_pressed="true"
        >
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/gray_light" />
                    <stroke android:width="1dp" android:color="@color/gray_dark" />
                    <corners android:radius="3dp" />
                </shape>
            </item>
            <item>
                <bitmap
                    android:gravity="center"
                    android:src="@drawable/ic_heart_filled_red"
                    />
            </item>
        </layer-list>
    </item>
    <item
        android:state_selected="true"
        android:state_pressed="false"
        >
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@android:color/white" />
                    <stroke android:width="1dp" android:color="@color/red" />
                    <corners android:radius="3dp" />
                </shape>
            </item>
            <item>
                <bitmap
                    android:gravity="center"
                    android:src="@drawable/ic_heart_filled_red"
                    />
            </item>
        </layer-list>
    </item>
    <item
        android:state_selected="false"
        android:state_pressed="true"
        >
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/gray_light" />
                    <stroke android:width="1dp" android:color="@color/gray_dark" />
                    <corners android:radius="3dp" />
                </shape>
            </item>
            <item>
                <bitmap
                    android:gravity="center"
                    android:src="@drawable/ic_heart_filled_red"
                    />
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@android:color/white" />
                    <stroke android:width="1dp" android:color="@color/gray_light_2" />
                    <corners android:radius="3dp" />
                </shape>
            </item>
            <item>
                <bitmap
                    android:gravity="center"
                    android:src="@drawable/ic_heart_filled_gray"
                    />
            </item>
        </layer-list>
    </item>
</selector>