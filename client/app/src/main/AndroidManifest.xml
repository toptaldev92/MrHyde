<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.faudroids.mrhyde" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name=".app.MrHydeApp"
        android:theme="@style/AppTheme" >

        <activity
            android:name=".ui.LoginActivity"
            android:theme="@style/LoginTheme"
            android:label="@string/app_name"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.MainDrawerActivity"
            android:theme="@style/NavigationDrawerTheme"
            />
        <activity
            android:name=".ui.DirActivity"
            />
        <activity
            android:name=".ui.FileActivity"
            />
        <activity
            android:name=".ui.CommitActivity"
            />
        <activity
            android:name=".ui.PreviewActivity"
            />
    </application>

</manifest>
